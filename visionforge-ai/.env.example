# ─── App ───────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ─── Database ──────────────────────────────────────────
DATABASE_URL="postgresql://postgres:password@localhost:5432/visionforge?schema=public"

# ─── Auth (NextAuth) ──────────────────────────────────
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars

# ─── OAuth Providers ──────────────────────────────────
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ─── AI Image Generation ──────────────────────────────
# Supported: openai, stability, huggingface
AI_PROVIDER=openai
OPENAI_API_KEY=
STABILITY_API_KEY=
HUGGINGFACE_API_KEY=

# ─── Cloud Storage ────────────────────────────────────
# Supported: s3, r2, supabase
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=visionforge-images

# Cloudflare R2 (if using R2)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=visionforge-images
R2_PUBLIC_URL=

# ─── Redis (for BullMQ queue) ─────────────────────────
REDIS_URL=redis://localhost:6379

# ─── Rate Limiting ────────────────────────────────────
RATE_LIMIT_MAX_REQUESTS=20
RATE_LIMIT_WINDOW_MS=60000

# ─── Credits ──────────────────────────────────────────
DEFAULT_USER_CREDITS=50
CREDITS_PER_GENERATION=1
